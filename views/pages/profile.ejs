<%- include('./../partials/header')%>

    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="/index">Hypertube</a>
        <ul class="nav justify-content-end">
            <% if (!data.userId) { %>
                <li class="nav-item">
                <a class="nav-link active" href="/login">Sign In</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/signup">Sign Up</a>
                </li>
            <% } else { %>
                <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/profile">Profile</a>
                </li>
            <% } %>
        </ul>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <% if (!data.image) {%>
                    <img class="profilePic" src="https://clinicforspecialchildren.org/wp-content/uploads/2016/08/avatar-placeholder.gif" alt="profile image avatar">
                <% } else { %>
                    <img class="profilePic" src="<%=data.image%>" alt="profile image avatar">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="firstname">First Name</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="firstname" id="firstname" aria-describedby="userFirstName" value="<%=(typeof data.firstname != "undefined" ? data.firstname : "")%>" placeholder="Enter firstname">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="lastname">Last Name</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="lastname" id="lastname" aria-describedby="userLastName" value="<%=(typeof data.lastname != "undefined" ? data.lastname : "")%>" placeholder="Enter lastname">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="email">Email address</label>
                        </div>
                        <div class="col-md-8">
                            <input type="email" class="form-control" name="email" id="email" aria-describedby="email" value="<%=(typeof data.email != "undefined" ? data.email : "")%>" placeholder="Enter email">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="username">Username</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="username" id="username" aria-describedby="userUsername" value="<%=(typeof data.username != "undefined" ? data.username : "")%>" placeholder="Enter username">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="language">Prefered Language</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="language" id="language" aria-describedby="userlanguage" value="<%=(typeof data.language != "undefined" ? data.language : "English")%>" placeholder="Enter language">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('./../partials/footer')%>