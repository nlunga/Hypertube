    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="/index">Hypertube</a>
        <ul class="nav justify-content-end">
            <% if (!data.userId) { %>
                <li class="nav-item">
                <a class="nav-link active" href="/login">Sign In</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/signup">Sign Up</a>
                </li>
            <% } else { %>
                <% if (isMovie === true) { %>
                    <form action="/search/movies" method="post">
                        <div class="row mb-4">
                            <div class="form-group col-md-9">
                            <input id="movie" type="text" name="movie" placeholder="What movie are you searching for?" class="form-control form-control-underlined">
                            </div>
                            <div class="form-group col-md-3">
                            <button type="submit" class="mr-5 mr-xl-5 btn btn-primary rounded-pill btn-block shadow-sm">Search</button>
                            </div>
                        </div>
                    </form>
                <% } else { %>
                    <form action="/search/tv" method="post">
                        <div class="row mb-4">
                            <div class="form-group col-md-9">
                                <input id="tvSeries" type="text" name="tvSeries" placeholder="What series are you searching for?" class="form-control form-control-underlined">
                            </div>
                            <div class="form-group col-md-3">
                                <button type="submit" class="mr-5 mr-xl-5 btn btn-primary rounded-pill btn-block shadow-sm">Search</button>
                            </div>
                        </div>
                    </form>
                <% } %>
                <div class="ml-5 ml-lg-4 dropdown show">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Discover
                    </a>
                  
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                      <a class="dropdown-item" href="/discover/movies">movies</a>
                      <a class="dropdown-item" href="/discover/tv">tv series</a>
                    </div>
                </div>
                <li class="nav-item">
                    <div class="ml-5 ml-lg-4 dropdown show">
                        <a class="dropdown-toggle" href="#" role="link" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-2x mt-1 fa-cog" aria-hidden="true"></i>
                        </a>
                      
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                          <a class="dropdown-item" href="/profile">view profile</a>
                          <a class="dropdown-item" href="/settings">edit settings</a>
                        </div>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                    </li>
            <% } %>
        </ul>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <% if (!data.image) {%>
                    <img class="profilePic" src="https://clinicforspecialchildren.org/wp-content/uploads/2016/08/avatar-placeholder.gif" alt="profile image avatar">
                <% } else { %>
                    <img class="profilePic" src="<%=data.image%>" alt="profile image avatar">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="firstname">First Name</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="firstname" id="firstname" aria-describedby="userFirstName" value="<%=(typeof data.firstname != "undefined" ? data.firstname : "")%>" placeholder="Enter firstname">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="lastname">Last Name</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="lastname" id="lastname" aria-describedby="userLastName" value="<%=(typeof data.lastname != "undefined" ? data.lastname : "")%>" placeholder="Enter lastname">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="email">Email address</label>
                        </div>
                        <div class="col-md-8">
                            <input type="email" class="form-control" name="email" id="email" aria-describedby="email" value="<%=(typeof data.email != "undefined" ? data.email : "")%>" placeholder="Enter email">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="username">Username</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="username" id="username" aria-describedby="userUsername" value="<%=(typeof data.username != "undefined" ? data.username : "")%>" placeholder="Enter username">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="language">Prefered Language</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="language" id="language" aria-describedby="userlanguage" value="<%=(typeof data.language != "undefined" ? data.language : "English")%>" placeholder="Enter language">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('./../partials/footer')%>