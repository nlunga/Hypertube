<%- include('./../partials/header')%>

    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="/index">Hypertube</a>
        <ul class="nav justify-content-end">
            <% if (!data.userId) { %>
                <li class="nav-item">
                <a class="nav-link active" href="/login">Sign In</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/signup">Sign Up</a>
                </li>
            <% } else { %>
                <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/profile">Profile</a>
                </li>
            <% } %>
        </ul>
    </nav>
    <div class="container">
        <div class="err">
            <% if (errors !== undefined) { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach( (result) => { %>
                            <% if (result.msg !== "Invalid value") {%>
                                <li><%=result.msg%></li>
                            <% } %>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
        </div>
        <form action="/login" method="post">
            <div class="form-groups">
                <label for="username">Username</label><br>
                <input type="text" name="username" id="username" placeholder="username">
            </div>
            <div class="form-groups">
                <label for="passord">Password</label><br>
                <input type="password" name="password" id="password" placeholder="password">
            </div>
            <input type="submit" class="btn btn-primary tmpLogin" value="login">
        </form>
        <a href="/forgotPassword">Forgot Password?</a>
        <hr>
        <a href="/auth/42"><button type="button" class="btn btn-outline-secondary btn-rounded waves-effect tmpAuth">intra</button></a><br>
        <a href="/auth/google" class="loginWithGoogle"><button type="button" class="btn btn-outline-danger btn-rounded waves-effect tmpAuth">Google</button></a><br>
        <a href="/auth/facebook" class="loginWithFacebook"><button type="button" class="btn btn-outline-info btn-rounded waves-effect tmpAuth">facebook</button></a><br>
    </div>

<%- include('./../partials/footer')%>